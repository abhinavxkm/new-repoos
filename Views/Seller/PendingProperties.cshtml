@model List<EasyHousingSolution.Models.Property>
@{
    ViewData["Title"] = "My Pending Properties";
}
<div class="content-card">
    <h2 class="text-white"><i class="fas fa-clock text-warning me-2"></i>My Pending Properties</h2>
    <p class="text-white-50">This page shows all of your properties that are currently awaiting verification by an administrator.</p>
    <hr style="background-color: rgba(255,255,255,0.1);" />
    @if (!Model.Any())
    {
        <div class="alert alert-info bg-transparent text-info border-info mt-3">
            You do not have any properties pending verification.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark-transparent table-hover align-middle">
                <thead>
                    <tr>
                        <th>Property Name</th>
                        <th>Type</th>
                        <th>Option</th>
                        <th>Price / Rent</th>
                        <th class="text-center">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.PropertyName</strong><br />
                                <small class="text-white-50">@item.Address</small>
                            </td>
                            <td>@item.PropertyType</td>
                            <td>@item.PropertyOption</td>
                            <td class="fw-bold">@item.PriceRange.ToString("C")</td>
                            <td class="text-center">
                                <span class="badge bg-warning text-dark">Pending Approval</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    <div class="mt-4">
        <a asp-action="Dashboard" asp-controller="Seller" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>