@model List<EasyHousingSolution.Models.Property>
@{
    ViewData["Title"] = "My Deactivated Properties";
}
<div class="content-card">
    <h2 class="text-white"><i class="fas fa-times-circle text-danger me-2"></i>My Deactivated & Rejected Properties</h2>
    <p class="text-white-50">This page shows properties that have been deactivated or rejected by an administrator. You can edit and resubmit them for verification.</p>
    <hr style="background-color: rgba(255,255,255,0.1);" />
    @if (!Model.Any())
    {
        <div class="alert alert-info bg-transparent text-info border-info mt-3">
            You do not have any deactivated properties.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark-transparent table-hover align-middle">
                <thead>
                    <tr>
                        <th>Property Name</th>
                        <th style="width: 50%;">Admin's Reason for Deactivation</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.PropertyName</strong><br />
                                <small class="text-white-50">@item.Region</small>
                            </td>
                            <td>
                                <strong class="text-warning">@item.DeactivationReason</strong>
                            </td>
                            <td class="text-center">
                                <a asp-action="EditProperty" asp-route-id="@item.PropertyId" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Edit & Resubmit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    <div class="mt-4">
        <a asp-action="Dashboard" asp-controller="Seller" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>