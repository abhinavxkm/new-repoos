@model EasyHousingSolution.Models.UploadImageViewModel

@{
    ViewData["Title"] = "Upload Images";
}

<h2><i class="fas fa-camera"></i> Upload Images</h2>
<hr />
<h4>For Property: <strong>@Model.PropertyName</strong></h4>

<div class="row">
    <div class="col-md-6">
        @* The 'enctype' is CRITICAL for file uploads to work *@
        <form asp-action="UploadImages" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="All" class="text-danger"></div>

            @* This hidden input sends the PropertyId back to the controller *@
            <input type="hidden" asp-for="PropertyId" />

            <div class="form-group mb-3">
                <label asp-for="Images" class="form-label"></label>
                @* 'multiple' attribute allows selecting more than one file *@
                <input asp-for="Images" type="file" class="form-control" multiple />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Upload</button>
                <a asp-action="VerifiedProperties" class="btn btn-secondary">Cancel</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}